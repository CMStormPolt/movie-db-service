{
    "compilerOptions": {
        "target": "es2017",
        "module": "esnext",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir": "build",
        "skipLibCheck": true,
        "moduleResolution": "nodenext",
        "allowSyntheticDefaultImports": true
      },
    "include": ["api/**/*"],
    "exclude": ["node_modules"]
}